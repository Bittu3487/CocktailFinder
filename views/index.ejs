<body>

  <!-- Fixed Navbar -->
  <div class="container-fluid nav_img">
    <div class="d-flex flex-wrap align-items-center justify-content-center">
      <form action="/submit" method="POST" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
        <div class="input-group mb-10">
          <input type="text" name="fName" class="form-control" placeholder="Search a Cocktail" aria-label="Recipient's search" aria-describedby="button-addon2">
          <button class="btn btn-outline-warning" type="submit" id="button-addon2">Search</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container">
  <div id="center-hero" class="px-4 py-5 my-5 text-center">
    <img src="cocktail.svg" alt="">
  
  
    <h1 style="color: white;" class="display-5 fw-bold">Welcome to Cocktail Finder</h1>
    <div class="col-lg-6 mx-auto">
      <!-- <p  class="lead mb-4">Discover a world of unique and delicious cocktails with our easy-to-use Cocktail Finder app. Whether you're looking for classic drinks or something new to try, simply search by cocktail name to get instant recipes, instructions, and images. Find your perfect drink and impress your guests at your next gathering!</p>
       -->
    </div>
  </div>

</div>
<div  id="footer-text" class="container">
  <footer  class="d-flex flex-wrap justify-content-center align-items-center py-5 mt-5">
      <div class="col-md-4 d-flex justify-content-center align-items-center">
          <span style="color: white;" class="mb-3 mb-md-0">Â© 2024 My Cocktail Finder App , All rights reserved</span>
      </div>
  </footer>
</div>

  <!-- Display Search Results in Div Boxes -->
  <div class="container mt-5">
    <% if (locals.data &&locals.data.drinks) { %>
      <h2></h2>
      <div class="row">
        <% data.drinks.forEach(function(drink) { %>
          <div class="col-md-4">
            <div class="result-box mt-5">
              <!-- Image First -->
              <img src="<%= drink.strDrinkThumb %>" alt="<%= drink.strDrink %>">
              <!-- Drink Information -->
              <h3><%= drink.strDrink %></h3>
              <p><strong>Category:</strong> <%= drink.strCategory %></p>
              <div class="drink-instructions">
              <p><strong>Instructions:</strong> <%= drink.strInstructions %></p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
  </div>
  <script>
    document.getElementById('center-hero').style.display = 'none';
    document.getElementById('footer-text').style.display = 'none';
  </script>
  <%- include("partial/footer.ejs") %>
 <% }%>
